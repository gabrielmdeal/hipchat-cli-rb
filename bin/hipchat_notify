#!/usr/bin/env ruby

require_relative "../lib/hip_chat_cli"

begin
  HipChatCli::Application.new(ARGV).run
rescue Errno::ENOENT => err
  abort "hip_chat_cli: #{err.message}"
rescue OptionParser::MissingArgument => err
  abort "hip_chat_cli: #{err.message}\n#{HipChatCli::Application.new(ARGV).help}"
rescue OptionParser::InvalidOption => err
  abort "hip_chat_cli: #{err.message}\nusage: hip_chat_cli [-bns] [file ...]"
end
